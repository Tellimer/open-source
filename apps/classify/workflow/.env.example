# Database Configuration
# Choose either PostgreSQL (remote/production) or SQLite (local/dev)

# PostgreSQL - Use for remote storage, concurrent access, better querying
# Uncomment to use PostgreSQL instead of SQLite
# POSTGRES_URL=postgresql://user:password@localhost:5432/classify_workflow
# DATABASE_URL=postgresql://user:password@localhost:5432/classify_workflow

# SQLite - Default for local development
# Only used if POSTGRES_URL is not set
CLASSIFY_DB_LOCAL_DEV=./data/classify-workflow-local-dev.db

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Batch Processing Configuration
# Number of indicators to emit per internal batch (default: 10)
# Lower values = more parallel batches, higher concurrency
# Higher values = fewer batches, less overhead
INTERNAL_EMIT_BATCH=5

# Delay between internal emit batches in milliseconds (default: 100)
INTERNAL_EMIT_DELAY_MS=100

# Startup warm-up delay in milliseconds for cold starts (default: 0)
STARTUP_WARM_MS=0

# API Security (optional)
# API_KEY=your_secret_api_key_here
