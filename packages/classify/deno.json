{
  "name": "@tellimer/classify",
  "version": "0.1.0",
  "tasks": {
    "dev": "deno run --watch examples/basic_usage.ts",
    "test": "deno test --env --allow-env --allow-net --allow-read --parallel",
    "test:unit": "deno test src/ --parallel",
    "test:int": "deno test --env --allow-env --allow-net --allow-read tests/e2e/classification_accuracy_test.ts",
    "test:watch": "deno test --env --allow-env --allow-net --allow-read --parallel --watch",
    "test:cov": "deno test --env --allow-env --allow-net --allow-read --coverage=coverage --parallel",
    "test:dry": "deno test tests/e2e/dry_run_test.ts",
    "cov:lcov": "deno coverage coverage --lcov > coverage/lcov.info",
    "bench": "deno bench --env --allow-env --allow-net tests/bench/classification_bench.ts",
    "cost-analysis": "deno run --env --allow-env --allow-net examples/cost_analysis.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.22"
  },
  "description": "LLM-based economic indicator classification and metadata enrichment for TypeScript/Deno. Supports OpenAI, Anthropic, and Google Gemini.",
  "runtime": {
    "deno": true,
    "node": true,
    "workerd": true,
    "bun": true
  },
  "license": "MIT",
  "exports": "./mod.ts",
  "author": "Sean Knowles <s@seanknowles.dev>",
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "publish": {
    "include": [
      "src/",
      "mod.ts",
      "README.md",
      "deno.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tellimer/open-source.git",
    "directory": "packages/classify"
  },
  "bugs": {
    "url": "https://github.com/Tellimer/open-source/issues"
  },
  "homepage": "https://github.com/Tellimer/open-source/tree/main/packages/classify#readme"
}

